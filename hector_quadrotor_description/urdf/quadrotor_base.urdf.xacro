<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find hector_sensors_description)/urdf/sonar_sensor.urdf.xacro" />
  <xacro:property name="pi" value="3.1415926535897931" />

  <!-- Main quadrotor link -->
  <xacro:macro name="quadrotor_base_macro">

    <material name="Cyan">
      <color rgba="0 1.0 1.0 .5"/>
    </material>
    
    <link name="base_link">
      <inertial>
        <mass value="1.477" />
        <origin xyz="0 0 0" />
        <inertia ixx="0.01152" ixy="0.0" ixz="0.0" iyy="0.01152" iyz="0.0" izz="0.0218" />
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://hector_quadrotor_description/meshes/quadrotor/quadrotor_base.dae"/>
        </geometry>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://hector_quadrotor_description/meshes/quadrotor/quadrotor_base.stl"/>
        </geometry>
      </collision>
    </link>

    <link name="additional_axel">
      <visual>
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry>
              <cylinder radius=".01" length="1"/>
          </geometry>
          <material name="Cyan"/>
      </visual>

      <collision>
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry>
              <cylinder radius=".01" length="1"/>
          </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.001"/>
        <inertia
          ixx="0.01" ixy="0.0" ixz="0.0"
          iyy="0.01" iyz="0.0"
          izz="0.01"/>
      </inertial>

    </link>
    <gazebo reference="additional_axel">
      <material>Gazebo/White</material>
    </gazebo>

    <link name="forward_axel">
      <visual>
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry>
              <cylinder radius=".01" length="1"/>
          </geometry>
          <material name="Cyan"/>
      </visual>

      <collision>
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry>
              <cylinder radius=".01" length="1"/>
          </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.001"/>
        <inertia
          ixx="0.01" ixy="0.0" ixz="0.0"
          iyy="0.01" iyz="0.0"
          izz="0.01"/>
      </inertial>
    </link>

    <gazebo reference="forward_axel">
      <material>Gazebo/White</material>
    </gazebo>


     <link name="wheel1">
     <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
            <cylinder radius=".5" length=".05"/>
        </geometry>
        <material name="Cyan"/>
     </visual>

     <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
            <cylinder radius=".5" length=".05"/>
        </geometry>
     </collision>
     <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.001"/>
      <inertia
        ixx="0.01" ixy="0.0" ixz="0.0"
        iyy="0.01" iyz="0.0"
        izz="0.01"/>
    </inertial>
   </link>

   <gazebo reference="wheel1">
     <material>Gazebo/Black</material>
   </gazebo>

   <link name="wheel2">
     <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
            <cylinder radius=".5" length=".05"/>
        </geometry>
        <material name="Cyan"/>
     </visual>

     <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
            <cylinder radius=".5" length=".05"/>
        </geometry>
     </collision>
     <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.001"/>
      <inertia
        ixx="0.01" ixy="0.0" ixz="0.0"
        iyy="0.01" iyz="0.0"
        izz="0.01"/>
    </inertial>
   </link>

   <gazebo reference="wheel2">
     <material>Gazebo/Black</material>
   </gazebo>

   <link name="motor1">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.1" length="0.01"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.1" length="0.01"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.0001"/>
        <inertia
          ixx="0.01" ixy="0.0" ixz="0.0"
          iyy="0.01" iyz="0.0"
          izz="0.01"
        />
      </inertial>
    </link>

    <gazebo reference="motor1">
      <material>Gazebo/Red</material>
    </gazebo>

    <link name="motor2">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.1" length="0.01"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.1" length="0.01"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.0001"/>
        <inertia
          ixx="0.01" ixy="0.0" ixz="0.0"
          iyy="0.01" iyz="0.0"
          izz="0.01"
        />
      </inertial>
    </link>

    <gazebo reference="motor2">
      <material>Gazebo/Green</material>
    </gazebo>

    <link name="motor3">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.1" length="0.01"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.1" length="0.01"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.0001"/>
        <inertia
          ixx="0.01" ixy="0.0" ixz="0.0"
          iyy="0.01" iyz="0.0"
          izz="0.01"
        />
      </inertial>
    </link>

    <gazebo reference="motor3">
      <material>Gazebo/Green</material>
    </gazebo>

    <link name="motor4">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.1" length="0.01"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.1" length="0.01"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.0001"/>
        <inertia
          ixx="0.01" ixy="0.0" ixz="0.0"
          iyy="0.01" iyz="0.0"
          izz="0.01"
        />
      </inertial>
    </link>

    <gazebo reference="motor4">
      <material>Gazebo/Green</material>
    </gazebo>

    <joint name="centre_axel_joint" type="fixed">
      <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
      <parent link="base_link"/>
      <child link="additional_axel"/>
    </joint>

    <joint name="centre_faxel_joint" type="fixed">
      <origin xyz="0 0 0" rpy="0 ${pi/2} 0"/>
      <parent link="base_link"/>
      <child link="forward_axel"/>
    </joint>

    <joint name="wheel1_joint" type="continuous">
      <origin xyz="0 0 .5" rpy="0 0 0"/>
      <parent link="additional_axel"/>
      <child link="wheel1"/>
      <axis xyz="0 0 1"/>
      <dynamics damping="0"/>
    </joint>

    <joint name="wheel2_joint" type="continuous">
      <origin xyz="0 0 -0.5" rpy="0 0 0"/>
      <parent link="additional_axel"/>
      <child link="wheel2"/>
      <axis xyz="0 0 1"/>
      <dynamics damping="0"/>
    </joint>

    <joint name="motor1_joint" type="revolute">
      <origin xyz="-0.015 0 0.3" rpy="0 ${-pi/2} 0"/>
      <parent link="forward_axel"/>
      <child link="motor1"/>
      <axis xyz="0 0 1"/>
      <limit effort="1000.0" velocity="0.0" lower="0.0" upper="0.0"/>
    </joint>

    <joint name="motor3_joint" type="revolute">
      <origin xyz="-0.015 0 -0.3" rpy="0 ${-pi/2} 0"/>
      <parent link="forward_axel"/>
      <child link="motor3"/>
      <axis xyz="0 0 1"/>
      <limit effort="1000.0" velocity="0.0" lower="0.0" upper="0.0"/>
    </joint>

    <joint name="motor2_joint" type="revolute">
      <origin xyz="0 0.015 0.3" rpy="${-pi/2} 0 0"/>
      <parent link="additional_axel"/>
      <child link="motor2"/>
      <axis xyz="0 0 1"/>
      <limit effort="1000.0" velocity="0.0" lower="0.0" upper="0.0"/>
    </joint>

    <joint name="motor4_joint" type="revolute">
      <origin xyz="0 0.015 -0.3" rpy="${-pi/2} 0 0"/>
      <parent link="additional_axel"/>
      <child link="motor4"/>
      <axis xyz="0 0 1"/>
      <limit effort="1000.0" velocity="0.0" lower="0.0" upper="0.0"/>
    </joint>


    <!-- Sonar height sensor -->
    <xacro:sonar_sensor name="sonar" parent="base_link" ros_topic="sonar_height" update_rate="10" min_range="0.03" max_range="3.0" field_of_view="${40*pi/180}" ray_count="3">
      <origin xyz="-0.16 0.0 -0.012" rpy="0 ${90*pi/180} 0"/>
    </xacro:sonar_sensor>

  </xacro:macro>
</robot>
